{

    "manifest_version": 2,
    "name": "Manga Notifier",
    "version": "1.0",

    "description": "Notifies you when a new manga is released.",
    "homepage_url": "https://github.com/Nischay-Pro/manga-notifier",
    "icons": {
        "48": "icons/manga-48.png",
        "96": "icons/manga-96.png"
    },

    "web_accessible_resources": [
        "options/dashboard.html",
        "options/options.js"
    ],

    "permissions": [
        "unlimitedStorage",
        "notifications",
		"activeTab",
        "storage"
    ],

    "background": {
        "scripts": ["content_scripts/background.js"]
    },

    "options_ui": {
        "page": "options/options.html",
        "browser_style": true,
        "open_in_tab":true
    },

      "browser_action": {
        "default_icon": "icons/manga-48.png",
		"default_title": "Manga Notifier",
		"default_popup": "popup/choose_interval.html"
      },

    "content_scripts": [{
        "matches": ["*://mangafox.me/*"],
        "js": ["content_scripts/manga.js"]
    }]

}